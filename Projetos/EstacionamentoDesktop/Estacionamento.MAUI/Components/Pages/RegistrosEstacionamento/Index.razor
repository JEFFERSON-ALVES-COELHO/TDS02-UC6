@page "/registros"
@inject HttpClient Http
@inject NavigationManager Navigation
@using Estacionamento.MAUI.Models

<h3 class="text-center mb-3">Registros de Estacionamento</h3>

<a href="/registros/create" class="btn btn-primary mb-3">Novo Registro</a>

@if (true)
{
    <p><em>Carregando...</em></p>
}
else if (false)
{
    <p><em>Nenhum registro encontrado.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Veículo (Placa)</th>
                <th>Vaga</th>
                <th>Entrada</th>
                <th>Saída</th>
                <th>Valor</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @* @foreach (var registro in registros) *@
            {
                <tr>
                    <td>Veiculo?.Placa</td>
                    <td>Vaga?.Localizacao</td>
                    <td>DataHoraEntrada</td>
                    <td>DataHoraSaida</td>
                    <td>ValorFinal?.ToString("C")</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-warning">Editar</a>
                        <a href="#" class="btn btn-sm btn-info">Detalhes</a>
                        <a href="#" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<Registros>? registros;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            registros = await Http.GetFromJsonAsync<List<Registros>>(
                "https://localhost:4000/api/registros"
            );
        }
        catch (Exception ex)
        {
            Console.WriteLine("Erro ao carregar registros: " + ex.Message);
            registros = new List<Registros>();
        }
    }
}