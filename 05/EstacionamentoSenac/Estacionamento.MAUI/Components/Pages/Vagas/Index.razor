@* @page "/vagas"
@inject HttpClient Http
@using Estacionamento.MAUI.Models
@using EstacionamentoSenac.API.Models

<h3>Index</h3>

<a href="/vagas/create" class="btn btn-primary">Cadastrar</a>

@if (vagas == null)
{
    <p>Carregando...</p>
}
else if (!vagas.Any())
{
    <p>Nenhum vaga encontrado.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Localizacao</th>
                <th scope="col">TipoVaga</th>
                </tr>
        </thead>
        <tbody>
            @foreach (var vaga in vagas)
            {
                <tr>
                    <td>@vaga.Id</td>
                    <td>@vaga.Localizacao</td>
                    <td>@vaga.TipoVagas</td>
                    <td>
                        <a href="/veiculos/edit/@vaga.Id" class="btn btn-warning">Editar</a>
                        <a href="/veiculos/details/@vaga.Id" class="btn btn-info">Detalhes</a>
                        <a href="/veiculos/delete/@vaga.Id" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<vaga? vagas;

    protected override async Task OnInitializedAsync()
    {
        vagas = await Http.GetFromJsonAsync<List<Vaga>>("https://localhost:4000/api/vagas");
    }
} *@